{
  "name": "avoriaz",
  "version": "1.0.0",
  "description": "a Vue.js testing framework",
  "main": "build",
  "scripts": {
    "docs:watch": "cd docs && gitbook serve",
    "lint": "eslint  --ext .js,.vue src test --ignore-path .gitignore",
    "lint:fix": "npm run lint -- --fix",
    "test": "npm run lint:fix && npm run test:karma",
    "test:karma": "cross-env BABEL_ENV=test karma start test/unit/setup/karma.conf.js --single-run"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/eddyerburgh/avoriaz.git"
  },
  "keywords": [
    "test vue",
    "vue.js",
    "vue",
    "vue test",
    "vue testing utilities"
  ],
  "author": "Edd Yerburgh",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/eddyerburgh/avoriaz/issues"
  },
  "homepage": "https://github.com/eddyerburgh/avoriaz#readme",
  "devDependencies": {
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-istanbul": "^3.1.2",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-2": "^6.18.0",
    "chai": "^3.5.0",
    "cross-env": "^3.1.4",
    "css-loader": "^0.26.1",
    "eslint": "^3.13.1",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-plugin-html": "^1.7.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.2",
    "eslint-plugin-react": "^6.9.0",
    "gitbook-cli": "^2.3.0",
    "istanbul": "^0.4.5",
    "karma": "^1.3.0",
    "karma-coverage": "^1.1.1",
    "karma-mocha": "^1.3.0",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-spec-reporter": "0.0.26",
    "karma-webpack": "^1.8.1",
    "mocha": "^3.2.0",
    "vue": "^2.1.8",
    "vue-loader": "^10.0.2",
    "vue-style-loader": "^1.0.0",
    "vue-template-compiler": "^2.1.8",
    "webpack": "^1.14.0"
  },
  "peerDependencies": {
    "vue": "2.x"
  }
}
